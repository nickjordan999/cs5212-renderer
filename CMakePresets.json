{
    "version": 3,
    "configurePresets": [
	{
      "name": "default",
      "displayName": "macOS (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/buildVCPkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "/Users/nickjordan/school/cg/code/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
	{
	    "name": "dev",
	    "binaryDir": "${sourceDir}/buildDev",
	    "cacheVariables": {
		"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
		"ENABLE_DEV_MODE": "ON",
		"ENABLE_TESTS": "ON",
		"CMAKE_POLICY_VERSION_MINIMUM": "3.5"
	    }
	},
	{
	    "name": "Release",
	    "binaryDir": "${sourceDir}/buildRelease",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release",
		"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
	    }
	}
    ]
}
